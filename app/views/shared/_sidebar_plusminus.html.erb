<% content_for :head do %>
  <style>
  .sidebar-title {
    padding-left: 26px;
    padding-bottom: 4px;
    padding-top: 10px;
    font-size: 16px;
    font-weight: bold;
    background-color: white;
  }

  .sidebar-category-name {
    padding-left: 26px;
    font-weight: bold;
    display: block;
    color: inherit;
  }

  .sidebar-category-name:hover {
    text-decoration: none;
  }

  .sidebar-category-group {
    margin-bottom: 10px;
  }

  .sidebar-item {
    padding: 2px 0px;
    border-top: 1px #bbb solid;
    border-right: 1px #bbb solid;
    -webkit-user-select: none;
    display: block;
    color: inherit;
    background-color: white;
  }

  .sidebar-item:last-child {
    border-bottom: 1px #bbb solid;
  }

  .sidebar-item:hover {
    background-color: #dddddd;
    color: inherit;
    text-decoration: none;
  }

  .sidebar-item.success {
    background-color: #dff0d8 !important;
  }

  .sidebar-item.danger {
    background-color: #f2dede !important;
  }

  .sidebar-item .sign-wrapper {
    width: 26px;
    padding-left: 10px;
  }

  .sidebar-item .sign {
    color: #333333;
    padding-right: 8px;
  }
  </style>
<% end %>



<div class="sidebar-title"><!--<%= t('approval.list_of_projects') %>--></div>


<% @categories.each do |category| %>
  <% if conf[:categorized] %>
    <a class="sidebar-category-name" href="#category<%= category.id %>"><%= category.name.html_safe %></a>
  <% end %>
  <div class="sidebar-category-group">
    <% category.ordered_projects.each do |project| %>
      <a class="sidebar-item" id="sidebar-item<%= project.id %>" href="javascript:showProject(<%= project.id %>)">
        <table>
          <tr>
            <td class="sign-wrapper">
              <span class="sign" id="sign<%= project.id %>" style="visibility: hidden;font-weight:bold">+</span>
            </td>
            <td>
              <%= project.title %>
            </td>
          </tr>
        </table>
      </a>
    <% end %>
  </div>
<% end %>


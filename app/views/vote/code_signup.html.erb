<% content_for :title, t('code_signup.title') %>

<style>
.panel {
  background-color: #fafafa;
}

.panel-body {
  font-size: 18px;
}

p.side-note {
  font-size: 18px;
}

span.alert {
  font-size: 16px;
}

</style>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 main">
      <center>
        <h2><%= t('code_signup.title') %></h2>
        <br>
        <p><%= t('code_signup.instruction') %></p>
        <%= form_for(:code, url: {action: :post_code_signup}) do |f| %>
          <% if flash[:error] %>
            <p style="font-size: 20px; color: red;"><%= flash[:error] %></p>
          <% end %>
          <%= f.text_field :code, placeholder: t('code_signup.code_placeholder'), autocomplete: "off", autofocus: "autofocus", style: "font-size: 20px; width: 200px; height: 40px; margin-right: 20px" %>

          <%= f.submit t('code_signup.vote_button'), class: "btn btn-primary btn-lg", style: "font-size: 20px" %><br /><br />
        <% end %>
      </center>
      <br><h4><%= raw t('code_signup.no_code_instruction') %></h4><br>
      <p id="side-note">
        <%= t('election.info').html_safe %>
      </p>
    </div>
  </div>
</div>

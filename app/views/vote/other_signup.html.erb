<% content_for :title, t('other_signup.title') %>

<style>
.panel {
  background-color: #fafafa;
}

.panel-body {
  font-size: 18px;
}

p.side-note {
  font-size: 18px;
}

span.alert {
  font-size: 16px;
}

input[type='text'] {
  display: inline-block;
  width: 500px;
  height: 50px;
  font-size: 16px;
}

</style>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2 main">
      <center>
        <h2><%= t('other_signup.title') %></h2>
        <br>
        <%= raw t('other_signup.instruction') %>

        <form action="<%= url_for(action: :post_other_signup) %>" method="post">
          <div class="panel panel-default">
            <div class="panel-body">
              <% if flash[:error] %>
                <p style="font-size: 20px; color: red;"><%= flash[:error] %></p>
              <% end %>
              <div class="form-group">
                <input type="text" name="account_number" id="account_number" class="form-control" autocomplete="off" placeholder="<%= t('other_signup.account_number_placeholder') %>" autofocus="autofocus" required="required" />
              </div>
              <input type="submit" value="<%= t('other_signup.vote_button') %>" class="btn-lg btn btn-primary" />
              <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
            </div>
          </div>
        </form>

      </center>
      <p id="side-note">
        <%= t('other_signup.no_account_number_instruction').html_safe %>
        <% if conf[:remote_voting_code_verification] %>
          <a href="<%= url_for action: :code_signup %>" class="btn btn-primary btn-lg" role="button"><%= t('index.remote.code_verification_button').html_safe %></a>
        <% end %>
        <%= t('election.info').html_safe %>
      </p>
    </div>
  </div>
</div>
